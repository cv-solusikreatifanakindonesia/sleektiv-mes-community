<model name="resourceAttributeValue" activable="false" auditable="false" versionable="false"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.sleektiv.org/model"
       xsi:schemaLocation="http://schema.sleektiv.org/model http://schema.sleektiv.org/model.xsd">
    <fields>

        <belongsTo name="resource" model="resource" required="true"/>

        <belongsTo name="attribute" model="attribute" plugin="basic" required="true"/>

        <belongsTo name="attributeValue" model="attributeValue" plugin="basic"/>

        <string name="value" required="true"/>

        <boolean name="fromDefinition" default="false"/>

    </fields>

    <hooks>
        <validatesWith class="com.sleektiv.mes.materialFlowResources.hooks.ResourceAttributeValueHooks"
                       method="validate"/>
        <onSave class="com.sleektiv.mes.materialFlowResources.hooks.ResourceAttributeValueHooks"
                method="onSave"/>
        <onDelete class="com.sleektiv.mes.materialFlowResources.hooks.ResourceAttributeValueHooks" method="onDelete"/>
    </hooks>

    <identifier expression="#value"/>
</model>
