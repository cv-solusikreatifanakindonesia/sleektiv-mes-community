<model name="operationSkill" activable="true"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.sleektiv.org/model"
       xsi:schemaLocation="http://schema.sleektiv.org/model http://schema.sleektiv.org/model.xsd">

    <fields>
        <belongsTo name="operation" plugin="technologies" model="operation" required="true"/>
        <belongsTo name="skill" plugin="basic" model="skill" required="true"/>
        <integer name="requiredLevel" required="true">
            <validatesRange from="0" exclusively="true"/>
        </integer>
    </fields>

    <hooks>
        <validatesWith class="com.sleektiv.mes.technologies.validators.OperationSkillValidators"
                       method="validatesWith"/>
    </hooks>
</model>