<model name="pieceRateItem" activable="false" auditable="false"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://schema.sleektiv.org/model"
       xsi:schemaLocation="http://schema.sleektiv.org/model http://schema.sleektiv.org/model.xsd">

    <fields>
        <belongsTo name="pieceRate" model="pieceRate"
                   required="true"/>

        <decimal name="actualRate" required="true">
            <validatesRange from="0" exclusively="true"/>
            <validatesUnscaledValue max="7"/>
            <validatesScale max="2"/>
        </decimal>

        <date name="dateFrom" required="true"/>
        <date name="dateTo"/>
    </fields>

    <hooks>
        <onSave
                class="com.sleektiv.mes.basic.hooks.PieceRateItemHooks"
                method="onSave"/>

        <onDelete
                class="com.sleektiv.mes.basic.hooks.PieceRateItemHooks"
                method="onDelete"/>

        <validatesWith
                class="com.sleektiv.mes.basic.hooks.PieceRateItemHooks"
                method="validatesWith"/>
    </hooks>

</model>
