<plugin plugin="catNumbersInNegot" group="supplies" version="${sleektiv.plugin.version}"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.sleektiv.org/plugin"
		xmlns:model="http://schema.sleektiv.org/modules/model" xmlns:view="http://schema.sleektiv.org/modules/view"
		xmlns:localization="http://schema.sleektiv.org/modules/localization"
		xmlns:custom="http://schema.sleektiv.org/modules/custom"
		xsi:schemaLocation="http://schema.sleektiv.org/plugin
       http://schema.sleektiv.org/plugin.xsd
       http://schema.sleektiv.org/modules/model
       http://schema.sleektiv.org/modules/model.xsd
       http://schema.sleektiv.org/modules/view
       http://schema.sleektiv.org/modules/view.xsd
       http://schema.sleektiv.org/modules/localization
       http://schema.sleektiv.org/modules/localization.xsd
       http://schema.sleektiv.org/modules/custom
       http://schema.sleektiv.org/modules/custom.xsd">

	<information>
		<name>MES - Catalog numbers in negotiations</name>
		<vendor>
			<name>Sleektiv.</name>
			<url>http://www.sleektiv.com/</url>
		</vendor>
		<description>Integrates catalog numbers with supply negotiations.</description>
		<license>AGPL</license>
	</information>

	<dependencies>
		<dependency>
			<plugin>catNumbersInDeliveries</plugin>
			<version>[1.2.0</version>
		</dependency>
		<dependency>
			<plugin>supplyNegotiations</plugin>
			<version>[1.1.8</version>
		</dependency>
	</dependencies>
	
	<modules>
		<localization:translation path="locales" />
		
		<model:model-field plugin="supplyNegotiations" model="requestForQuotationProduct">
			<model:belongsTo name="productCatalogNumber" model="productCatalogNumbers"
				plugin="productCatalogNumbers" persistent="false" />
		</model:model-field>
		
		<model:model-hook plugin="supplyNegotiations" model="requestForQuotationProduct">
			<model:onView
				class="com.sleektiv.mes.catNumbersInNegot.hooks.RequestForQuotationProductHooksCNIN"
				method="updateRequestForQuotationProductCatalogNumber" />
		</model:model-hook>
		
		<view:view-grid-column plugin="supplyNegotiations"
			view="requestForQuotationDetails" component="requestForQuotationProducts">
			<view:column name="productCatalogNumber" fields="productCatalogNumber"
				expression="#productCatalogNumber['catalogNumber']" orderable="true" searchable="true" />
		</view:view-grid-column>

		<custom:custom class="com.sleektiv.mes.catNumbersInNegot.CatNumbersInNegotOnStartupService" />
	</modules>

	<features>
		<end-user />
		<internal-integration />
	</features>
</plugin>