<ribbonExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xmlns="http://schema.sleektiv.org/modules/ribbonExtension"
                 xsi:schemaLocation="http://schema.sleektiv.org/modules/ribbonExtension http://schema.sleektiv.org/modules/ribbonExtension.xsd"
                 plugin="technologies" view="technologyDetails">

    <group name="productsFlow">
        <bigButton name="fillLocationsInComponents" icon="iconProducts24.png" state="disabled">
            <script>
                <![CDATA[
					this.addOnChangeListener({
						onClick: function() {
							if(window.canClose()) {
								#{form}.performEvent('fillLocationsInComponents', []);
							}
						}
					});
				]]>
            </script>
        </bigButton>
    </group>
    <group name="modelCard">
        <bigButton name="createModelCard" icon="generateIcon16.png" state="disabled">
            <script>
                <![CDATA[
					this.addOnChangeListener({
						onClick: function() {
							if(window.canClose()) {
								#{form}.performEvent('createModelCard', []);
							}
						}
					});
				]]>
            </script>
        </bigButton>
    </group>
    <group name="productionLines">
        <bigButton name="addMultipleProductionLines" icon="newIcon24.png" state="disabled">
            <script>
                <![CDATA[
                    this.addOnChangeListener({
                        onClick: function() {
                            if(window.canClose()) {
                                #{form}.performEvent('addMultipleProductionLines', []);
                            }
                        }
                    });
                ]]>
            </script>
        </bigButton>
    </group>
</ribbonExtension>