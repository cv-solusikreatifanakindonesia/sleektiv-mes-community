<plugin plugin="sleektivLocalization" group="framework" version="${sleektiv.plugin.version}"
		system="true" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://schema.sleektiv.org/plugin"
		xmlns:localization="http://schema.sleektiv.org/modules/localization"
		xsi:schemaLocation="http://schema.sleektiv.org/plugin
		http://schema.sleektiv.org/plugin.xsd 




		http://schema.sleektiv.org/modules/localization 
		http://schema.sleektiv.org/modules/localization.xsd">

	<information>
		<name>Sleektiv Framework Localization</name>
		<vendor>
			<name>Sleektiv.</name>
			<url>http://www.sleektiv.com/</url>
		</vendor>
		<description>System plugin responsible for message translation and number or date format localization.</description>
		<license>AGPL</license>
	</information>

	<dependencies>
		<dependency>
			<plugin>sleektivPlugin</plugin>
			<version>[0.4.1</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation-locale
				locale="en" label="English" />
		<localization:translation-locale
				locale="pl" label="Polski" />
		<localization:translation-locale
				locale="de" label="Deutsch" />
		<localization:translation-locale
				locale="cn" label="中文" />
		<localization:translation-locale
				locale="fr" label="Français" />
	</modules>
	
	<features>
		<dev-library />
	</features>

</plugin>